<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lecturador.android.applecturador.ReImprimir">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Codigo Ubicacion:"
        android:id="@+id/tvImCodSocioP"
        android:padding="10dp"
        android:textAlignment="center"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:padding="10dp"
        android:text="Nombre:"
        android:id="@+id/textView3"
        android:layout_below="@+id/tvImCodSocioP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Periodo:"
        android:id="@+id/textView4"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLecturaP"
        android:hint=""
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:textColor="#ff29132c"
        android:textAlignment="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="40dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

    </EditText>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medidor:"
        android:textOff="NO"
        android:textOn="SI"
        android:showText="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/swNmedP"
        android:padding="7dp"
        android:paddingBottom="7dp"
        android:textColor="#757575"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nro.:"
        android:id="@+id/textView6"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/swNmedP"
        android:layout_toRightOf="@+id/swNmedP"
        android:layout_toEndOf="@+id/swNmedP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNumeP"
        android:padding="5dp"
        android:textAlignment="center"
        android:gravity="left"
        android:singleLine="true"
        android:layout_below="@+id/tvDescPeriodo"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/tvDescPeriodoP"
        android:layout_alignEnd="@+id/tvDescPeriodoP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Digite la Lectura:"
        android:id="@+id/textView5"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/swNmedP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/spObsP"
        android:layout_below="@+id/etLecturaP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvDescCodigoP"
        android:padding="10dp"
        android:textAlignment="center"
        android:gravity="left"
        android:singleLine="true"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tvImCodSocioP"
        android:layout_toEndOf="@+id/tvImCodSocioP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNombreSP"
        android:padding="10dp"
        android:textAlignment="center"
        android:gravity="left"
        android:singleLine="true"
        android:layout_below="@+id/tvDescCodigoP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvDescPeriodoP"
        android:layout_alignStart="@+id/tvDescPeriodoP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvDescPeriodoP"
        android:padding="10dp"
        android:textAlignment="center"
        android:gravity="left"
        android:singleLine="true"
        android:layout_below="@+id/tvNombreSP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_below="@+id/spObsP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:id="@+id/btnCancelar"
            android:layout_below="@+id/spObsP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.80" />

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Imprimir"
            android:id="@+id/btnSendPrint"
            android:layout_below="@+id/spObsP"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.24" />

    </LinearLayout>

</RelativeLayout>
